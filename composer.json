{
  "name": "tflori/nb-sessions",
  "description": "Non-Blocking-Sessions made easy",
  "license": "Apache-2.0",
  "require": {
    "php": "^7.3 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "mockery/mockery": "*",
    "squizlabs/php_codesniffer": "*",
    "tflori/phpunit-printer": "*",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "NbSessions\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NbSessions\\Test\\": "tests/"
    }
  },
  "scripts": {
    "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=public tests",
    "test": "phpunit --stderr",
    "coverage": "phpunit --stderr --coverage-text"
  }
}
